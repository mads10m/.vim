import { Injectable } from '@angular/core';
import { Config } from '../config';
import {HttpClient} from "@angular/common/http";

@Injectable()
export class LocationsProvider {

  constructor(public http: HttpClient) {

  }

  list(): Promise<Object> {
    return this.http.get(Config.serverURL + 'api/location').toPromise();
  }

  create(details): Promise<Object> {
    return this.http.post(Config.serverURL + 'api/location', details).toPromise();
  }

  show(locationId): Promise<Object> {
    return this.http.get(Config.serverURL + 'api/location/' + locationId).toPromise();
  }

  updatePickupTime(locationId, timeData) : Promise <Object> {
    return this.http.put(Config.serverURL + 'api/location/' + locationId, timeData).toPromise();
  }

  updateLocation(locationId, data) : Promise <Object> {
	console.log(data);
    return this.http.put(Config.serverURL + 'api/location/' + locationId +'/edit', data).toPromise();
  }

  delete(locationId) : Promise <Object> {
    return this.http.delete(Config.serverURL + 'api/location/' + locationId +'/edit').toPromise();
  }

}
