'use strict';

const mongoose = require('mongoose');

const Order = mongoose.model('Order', {
  transactionId: {
    type: String,
    required: true
  },
  user: {
    type: mongoose.Schema.Types.ObjectId,
    ref: 'User',
    required: true
  },
  products: {
    type: [{
      type: mongoose.Schema.Types.ObjectId,
      ref: 'Product'
    }],
    required: true
  },
  location: {
    type: String,
    required: false
  },
  pickupDate: {
    type: Date
  },
  totalCost: {
    type: Number,
    required: true
  }
});

module.exports = Order;
